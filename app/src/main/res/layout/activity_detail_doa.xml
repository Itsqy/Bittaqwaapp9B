<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_detail_doa"
    android:orientation="vertical"
    tools:context=".menus.doa.DetailDoaActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_detaildoa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_ios_24"
        app:title="Detail Doa"
        app:titleTextAppearance="@style/toolbarTheme" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_margin="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_doa"
            android:orientation="vertical"
            android:padding="16dp">


            <TextView
                android:id="@+id/tv_title_detaildoa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Judul Doa"
                android:textAlignment="center"
                android:textSize="30sp" />


            <TextView
                android:id="@+id/tv_arab_detaildoa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="ARABIC Doa"
                android:textAlignment="center"
                android:textSize="24sp" />


            <TextView
                android:id="@+id/tv_latin_detaildoa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Latin "
                android:textAlignment="center"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/tv_deskripsi_detaildoa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi doa / arti"
                android:textAlignment="center"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/tv_riwayat_detaildoa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Riwayat Doa"
                android:textAlignment="center"
                android:textSize="16sp" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>